/* pages/user/user.wxss */
.userinfo {
    background: #1296db;
    padding: 4vw 0;
}
.avatar {
    width: 20vw;
    height: 20vw;
    border-radius: 20vw;
    overflow: hidden;
    border: 2px solid #f2f2f2;
}
.nickname {
    color: #ffffff;
    line-height: 2rem;
}
.option {
    box-sizing: border-box;
    padding: 3vw 2vw;
    border-bottom: 1px solid #f2f2f2;
}
.option view{
    float: left;
}
.action-name {
    margin-left: 2vw;
}
.right {
    float: right !important;
}